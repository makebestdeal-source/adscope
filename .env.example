# Database
DATABASE_URL=postgresql+asyncpg://adscope:your_password@localhost:5432/adscope
DB_PASSWORD=your_secure_password
POSTGRES_DB=adscope
POSTGRES_USER=adscope
POSTGRES_PASSWORD=adscope

# Redis
REDIS_URL=redis://localhost:6379/0

# Naver API
NAVER_TREND_CLIENT_ID=
NAVER_TREND_CLIENT_SECRET=
NAVER_AD_API_KEY=
NAVER_AD_SECRET_KEY=
NAVER_AD_CUSTOMER_ID=

# Meta
META_CRAWL_MODE=browser              # "browser" (기본, 토큰 불필요) 또는 "api" (토큰 필요)
META_ACCESS_TOKEN=                   # API 모드 시 필수
META_API_VERSION=v22.0
META_AD_COUNTRY=KR
META_AD_LIMIT=50
META_MAX_PAGES=1
META_MAX_RETRIES=3
META_RETRY_BACKOFF_MS=800
META_FEED_SCROLL_COUNT=5
META_TRUST_CHECK=true                # Google 투명성 센터 크로스체킹
META_TRUST_CHECK_LIMIT=10

# Google GDN
GDN_PUBLISHER_URLS=https://www.daum.net/,https://www.mk.co.kr/,https://www.yna.co.kr/
GDN_MAX_PUBLISHERS=2
GDN_TRUST_CHECK=true
GDN_TRUST_CHECK_LIMIT=15
GDN_TRUST_TIMEOUT_MS=10000

# Kakao media
KAKAO_MEDIA_URLS=
KAKAO_MAX_MEDIA=2

# Media cost profile
MEDIA_COLLECTION_PROFILE=lean
MEDIA_ROTATION_KEY=

# Naver DA
NAVER_DA_PLACEMENTS=                 # 콤마 구분 지면명 (비어있으면 전체 수집)
NAVER_DA_SELECTOR_FALLBACK=true      # 고정 셀렉터 실패 시 fallback 파싱

# YouTube
YOUTUBE_PLAYER_SAMPLES=1
YOUTUBE_SURF_SAMPLES=3              # 서핑 모드: 영상 샘플 수
YOUTUBE_SURF_SCROLL_ROUNDS=3        # 서핑 모드: 피드 스크롤 횟수
# YOUTUBE_COOKIE_DIR=yt_cookies      # 수동 쿠키 저장 디렉토리 (기본: yt_cookies/)
# YOUTUBE_COOKIE_MAX_AGE_DAYS=30     # 쿠키 최대 유효기간 (기본: 30일)

# Instagram (모바일 웹)
INSTAGRAM_SCROLL_ROUNDS=5           # 피드 스크롤 횟수
INSTAGRAM_EXPLORE_CLICKS=6          # Explore 콘텐츠 클릭 횟수
INSTAGRAM_REELS_SWIPES=10           # Reels 스와이프 횟수
INSTAGRAM_PUBLIC_PROFILE_VISITS=8   # 비로그인 공개 프로필 방문 횟수
INSTAGRAM_COOKIE_DIR=ig_cookies     # 수동 쿠키 저장 디렉토리
# INSTAGRAM_USERNAME=                # ID/PW 로그인용 (수동 쿠키 우선)
# INSTAGRAM_PASSWORD=

# Screenshot
SCREENSHOT_ELEMENT_CAPTURE=true      # 광고 영역 element 스냅샷 캡처
SCREENSHOT_QUALITY=80

# JWT / Security
JWT_SECRET_KEY=your-secure-random-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Admin
ADMIN_EMAIL=admin@adscope.kr
ADMIN_PASSWORD=change_this_password

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Environment (development | production)
ENVIRONMENT=development

# Sentry
SENTRY_DSN=

# S3 (스크린샷 저장)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=adscope-screenshots
AWS_REGION=ap-northeast-2

# App
APP_ENV=development
LOG_LEVEL=INFO
LOG_DIR=logs
ENABLE_CAMPAIGN_REBUILD=true
CAMPAIGN_EXCLUDED_CHANNELS=youtube_ads
CRAWL_CHANNELS=naver_search,google_gdn,kakao_da,naver_da,meta_library
NON_KEYWORD_CHANNEL_MIN_INTERVAL_MINUTES=240
CRAWL_CHANNEL_MIN_INTERVALS=google_gdn:240,kakao_da:240,meta_library:240,instagram_mobile:360
CRAWL_CHANNEL_KEYWORD_LIMITS=google_gdn:1,kakao_da:1,meta_library:1,youtube_ads:1,instagram_mobile:1

# Verification gate
VERIFICATION_GATE_ACTIVE_DAYS=7
VERIFICATION_GATE_MIN_TOTAL=5
VERIFICATION_GATE_DEFAULT_MIN_COVERAGE=0.50
VERIFICATION_GATE_DEFAULT_MIN_VERIFIED=0.10
VERIFICATION_GATE_CHANNELS=
VERIFICATION_GATE_CHANNEL_RULES=meta_library:0.95:0.95,google_gdn:0.50:0.20:5,naver_search:0.50:0.00:5,kakao_da:0.50:0.00:0

# -- PortOne Payment --
PORTONE_API_SECRET=
PORTONE_STORE_ID=
PORTONE_CHANNEL_KEY=

# -- Plan Config --
FREE_TRIAL_DAYS=7
